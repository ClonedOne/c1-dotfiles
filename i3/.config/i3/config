# Multimiedia keys config
# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle # mute microphone

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 2 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 2 # decrease screen brightness

# Handles multiple monitors
bindsym XF86Display exec mons -O 2 --primary HDMI-1
bindsym XF86Tools exec mons -O 0 --primary eDP-1
bindsym XF86Favorites exec mons -e left --primary eDP-1

